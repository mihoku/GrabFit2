@model GrabFit2.Models.FoodReferences

@{
    ViewBag.Title = "Calorie Details";
}

<div class="row">
    <div class="col-xl-12 col-lg-12 box-col-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-11">
                        <h5><strong>@Model.Brand</strong> @Model.FoodName</h5>
                    </div>
                    <div class="col-1 text-right"><a href="@Url.Action("Index")"><i class="text-muted" data-feather="arrow-left"></i></a></div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h2>Calorie Detail</h2>
                        <div id="chart1"> </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body bg-success">
                                        <center>
                                            <strong>Calorie</strong><br />
                                            <strong>(Cal)</strong><br />
                                            <h3>@Model.Calorie</h3>
                                        </center>

                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body bg-secondary">
                                        <center>
                                            <strong>Carbo</strong><br />
                                            <strong>(gram)</strong><br />
                                            <h3>@Model.Carbohydrate</h3>
                                        </center>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body bg-primary">
                                        <center>
                                            <strong>Fat</strong><br />
                                            <strong>(gram)</strong><br />
                                            <h3>@Model.Fat</h3>
                                        </center>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body bg-info">
                                        <center>
                                            <strong>Protein</strong><br />
                                            <strong>(gram)</strong><br />
                                            <h3>@Model.Protein</h3>
                                        </center>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <p>
                                    @Model.Calorie calories contained in @Model.Size<br />
                                    Calorie detail: @ViewBag.FatCal % fat, @ViewBag.CarbCal % carb, @ViewBag.ProtCal % protein
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<script src="~/assets-poco/js/chart/apex-chart/apex-chart.js"></script>
<!--charts start-->
<script>
    var options = {
        chart: {
            width: 370,
            type: 'donut',
        },
        dataLabels: {
            enabled: false
        },
        series: [@ViewBag.FatCal, @ViewBag.CarbCal, @ViewBag.ProtCal],
        labels: ['Fat', 'Carbohydrate', 'Protein'],
        responsive: [{
            breakpoint: 200,
            options: {
                chart: {
                    width: 200
                },
                legend: {
                    show: false
                }
            }
        }],
        legend: {
            position: 'bottom'
        },
        fill: {
            opacity: 1
        },
        colors: ['#7e37d8', '#fe80b2', '#06b5dd'],

    }

    var chart = new ApexCharts(
        document.querySelector("#chart1"),
        options
    );

    chart.render()
</script>
<!--charts end-->